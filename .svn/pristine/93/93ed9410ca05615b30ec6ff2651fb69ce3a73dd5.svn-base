/*configuration du corps de la page*/
html,
body {
    font-family: Arial;
    margin: 0;
    padding: 0;
    font-size: 1em;
    color: gray;
    height: 100%;
    width: 100%;
}

/*Configuration de la boite haut */
div#haut {
    width: 100%;
    height: 15%;
    background-color: gray;
    color: white;
    text-align: center;
}

#haut h1 {
    color: white;
    padding-bottom: 10px;
    padding-top: 10px;
}

#haut ul {
    list-style-type: none;
}

#haut li {
    display: inline;
    margin-right: 10px;
    padding: 0px 30px 0 30px;
    background-color: white;
}

#haut a {
    text-decoration: none;
    color: gray;
}

/*Configuration de la boite centre et de ses composants*/
#centre {
    height: 75%;
    width: 100%;
    overflow: auto;
    padding-top: 20px;
    background-color: white;
    text-align: center;
}

#centre h1 {
    font-size: 1.5em;
    color: gray;
}

#centre form {
    font-size: 1.2rem;
}

#centre form input[type="text"],
#centre form input[type="password"] {
    font-size: 1.2rem;
    margin: 1rem;
}

/*Configuration du pied*/
div#pied {
    height: 5%;
    width: 100%;
    color: white;
    background-color: gray;
    text-align: center;
    position: fixed;
    bottom: 0;
}

/*Configuration des balises de structuration*/

table {
    font-size: 0.95em;
    text-align: center;
    width: 70%;
}

table td {
    border: 1px solid;
    border-color: gray;
}

img {
    width: auto;
    height: auto;
    padding-top: 10px;
}

.important {
    color: red;
}
