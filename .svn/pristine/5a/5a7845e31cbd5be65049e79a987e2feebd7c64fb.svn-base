let handleConnexion = () => {
    console.log("test")
    let xhttp = new XMLHttpRequest()
    xhttp.onreadystatechange = () => {
        if (this.readyState === 4 && this.status === 200) {
            document.getElementById("ModalPopup").innerHTML = this.responseText // a revoir
        }
    }
    xhttp.open("GET", "connexion.php", true)
    xhttp.send()
}
